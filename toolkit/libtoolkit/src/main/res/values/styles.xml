<resources>

    <!-- ======================================================================================= -->
    <!-- Global customizations -->
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:itemBackground">?attr/selectableItemBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorDark</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowBackground">@color/colorWhiteLight</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CloudsToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:textSize">@dimen/fonts_size_medium</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Local customizations -->
    <!-- Activities themes-->
    <style name="NoActionBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SignInTheme" parent="NoActionBarTheme">
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="searchViewStyle">@style/SearchViewEditHint</item>
    </style>

    <style name="MainActivityTheme" parent="NoActionBarTheme">
        <!-- Workaround for status bar color -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="searchViewStyle">@style/SearchViewEditHint</item>
    </style>

    <style name="NavigationTheme" parent="MainActivityTheme">
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="WebDavTheme" parent="NoActionBarTheme">
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
    </style>

    <style name="DialogCommonTheme" parent="NoActionBarTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DialogShareTheme" parent="NoActionBarTheme">
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
        <item name="searchViewStyle">@style/SearchViewEditHint</item>
    </style>

    <style name="OnBoardingTheme" parent="NoActionBarTheme">
        <item name="android:statusBarColor">@color/colorGrey</item>
    </style>

    <style name="MediaTheme" parent="NoActionBarTheme">
        <item name="android:windowEnableSplitTouch">true</item>
        <item name="android:splitMotionEvents">true</item>
    </style>

    <style name="SplashTheme" parent="NoActionBarTheme" />

    <style name="PortalTheme" parent="NoActionBarTheme">
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
    </style>

    <style name="DialogStoreTheme" parent="DialogCommonTheme">
        <item name="colorControlActivated">@color/colorPrimaryLight</item>
    </style>

    <style name="DialogOperationTheme" parent="NoActionBarTheme" />

    <style name="DialogAboutTheme" parent="NoActionBarTheme" />

    <style name="DialogAccountsTheme" parent="DialogCommonTheme" />

    <style name="WebViewerTheme" parent="NoActionBarTheme" />

    <!-- ======================================================================================= -->
    <!-- Search views -->
    <style name="SearchViewEdit" parent="Widget.AppCompat.Light.SearchView">
        <item name="queryBackground">@null</item>
        <item name="submitBackground">@null</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="SearchViewEditHint" parent="SearchViewEdit">
        <item name="defaultQueryHint">@string/toolbar_menu_search_hint</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Common views-->
    <style name="CommonTextView" parent="AppTheme">
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Switch button -->
    <style name="CommonSwitchView" parent="AppTheme">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="CommonButton" parent="AppTheme">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CommonImageView" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CommonEditText" parent="AppTheme">
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
    </style>

    <style name="CommonImageButton" parent="AppTheme" />

    <style name="CommonWebView" parent="AppTheme" />

    <style name="CommonRecycleView" parent="AppTheme" />

    <!-- ======================================================================================= -->
    <!-- Selectable background -->
    <style name="WhiteColorControlHighlight">
        <item name="colorControlHighlight">@color/colorLightWhite</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- ImageButton\ImageView -->
    <style name="AlphaImageView" parent="CommonImageView">
        <item name="android:alpha">@dimen/alpha_medium</item>
    </style>

    <style name="AlphaImageButton" parent="CommonImageButton">
        <item name="android:alpha">@dimen/alpha_medium</item>
    </style>

    <style name="FilterWhiteImageView" parent="CommonImageView">
        <item name="android:tint">@color/colorWhite</item>
        <item name="android:tintMode">src_atop</item>
        <item name="android:theme">@style/WhiteColorControlHighlight</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Text -->
    <!-- Place holder -->
    <style name="PlaceholderTextView" parent="CommonTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ViewPager text -->
    <style name="ViewPagerTabsText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <style name="PortalsViewPagerTabsText" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <!-- ViewPager layout -->
    <style name="ViewPagerTabs" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
    </style>

    <!-- Collapse toolbar text -->
    <style name="CommonCollapseTextView" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ExpandedTextView" parent="CommonCollapseTextView">
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <style name="CollapsedTextView" parent="CommonCollapseTextView">
        <item name="android:textSize">@dimen/fonts_size_micro</item>
    </style>

    <!-- Text sizes -->

    <style name="LargeTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textSize">@dimen/fonts_size_large</item>
    </style>

    <style name="MediumTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textSize">@dimen/fonts_size_medium</item>
    </style>

    <style name="SmallTextView" parent="CommonTextView">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <!-- Text colors -->
    <!-- Black -->

    <style name="ItemLargeText" parent="LargeTextView">
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="ItemMediumBlackText" parent="MediumTextView">
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <style name="ItemSmallBlackText" parent="SmallTextView">
        <item name="android:textColor">@color/colorDark</item>
    </style>

    <!-- Grey -->
    <style name="ItemMediumGreyText" parent="MediumTextView">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="ItemSmallGreyText" parent="SmallTextView">
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <!-- White -->
    <style name="ItemMediumWhiteText" parent="MediumTextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ItemSmallWhiteText" parent="SmallTextView">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Light grey -->

    <style name="ItemSmallLightText" parent="SmallTextView">
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="CloudStorageText" parent="ItemMediumGreyText">
        <item name="android:lines">3</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TextInputLayout error color -->
    <style name="TextInputErrorGrey" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/default_notice_text_size</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="TextInputErrorRed" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/default_notice_text_size</item>
        <item name="android:textColor">@color/colorLightRed</item>
    </style>

    <!-- On boarding -->
    <style name="OnBoardingTextView" parent="CommonTextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">7</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">7</item>
    </style>

    <style name="AuthTextView" parent="CommonTextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">5</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Buttons -->
    <style name="ColorButtons" parent="CommonButton">
        <item name="android:backgroundTint">
            @drawable/drawable_selector_button_primary_background_tint
        </item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorGrey</item>
    </style>

    <style name="AccentButtons" parent="ColorButtons">
        <item name="android:backgroundTint">
            @drawable/drawable_selector_button_accent_background_tint
        </item>
        <item name="android:textColor">@drawable/drawable_selector_button_accent_text_color</item>
    </style>

    <style name="TransparentBlackButtons" parent="ColorButtons">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@drawable/drawable_selector_button_black_text_color</item>
    </style>

    <style name="TransparentWhiteButtons" parent="ColorButtons">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:theme">@style/WhiteColorControlHighlight</item>
    </style>

    <style name="TransparentAccentButtons" parent="TransparentBlackButtons">
        <item name="android:textColor">@drawable/drawable_selector_button_transparent_text_color
        </item>
    </style>

    <!-- For login screens -->
    <style name="FixedAccentButtons" parent="AccentButtons">
        <item name="android:layout_height">@dimen/default_login_accent_button_height</item>
    </style>

    <style name="FixedTransparentButtons" parent="FixedAccentButtons">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_height">@dimen/default_login_transparent_button_height</item>
        <item name="android:textColor">@drawable/drawable_selector_button_black_text_color</item>
    </style>

    <style name="FixedTransparentAccentButtons" parent="FixedTransparentButtons">
        <item name="android:layout_height">@dimen/default_login_transparent_button_height</item>
        <item name="android:textColor">@drawable/drawable_selector_button_transparent_text_color
        </item>
    </style>

    <style name="FixedTransparentAccentButtonsNoCaps" parent="FixedTransparentAccentButtons">
        <item name="android:textSize">@dimen/fonts_size_small</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- EditTexts -->
    <style name="MediumEditText" parent="CommonEditText">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/fonts_size_medium</item>
    </style>

    <!-- ======================================================================================= -->
    <!-- Context common -->
    <style name="ContextMenuDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Context dialog/popups-->
    <style name="ContextListLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_one_line_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/screen_margin_large</item>
        <item name="android:paddingRight">@dimen/screen_margin_large</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ContextListImage" parent="AlphaImageView">
        <item name="android:layout_width">@dimen/image_default_size</item>
        <item name="android:layout_height">@dimen/image_default_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ContextListMediumText" parent="ItemMediumBlackText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ContextDrawerListText" parent="ContextListMediumText">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/fonts_size_small</item>
    </style>

    <style name="ContextListAccountsLayout" parent="ContextListLayout">
        <item name="android:layout_height">@dimen/item_two_line_height</item>
    </style>

    <style name="ContextListAccountImage" parent="ContextListImage">
        <item name="android:layout_width">@dimen/image_size</item>
        <item name="android:layout_height">@dimen/image_size</item>
        <item name="android:padding">@dimen/image_padding_icon</item>
    </style>

    <style name="ContextListAccountSmallText" parent="ContextDrawerListText">
        <item name="android:layout_marginLeft">@dimen/screen_margin_large</item>
    </style>

    <!-- Popup menu -->
    <style name="PopupLayout" parent="ContextListLayout">
        <item name="android:layout_width">@dimen/popup_width_context</item>
    </style>

    <style name="PopupText" parent="ContextListMediumText">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Operation layout copy/move -->
    <style name="OperationLayout" parent="ContextListLayout">
        <item name="android:layout_height">@dimen/item_two_line_height</item>
    </style>

    <style name="OperationImage" parent="ContextListImage">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="ContextLineSeparator">
        <item name="android:layout_marginLeft">@dimen/line_separator_left_margin</item>
    </style>

</resources>
