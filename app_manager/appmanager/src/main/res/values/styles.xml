<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/drawable_launcher</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:statusBarColor">@color/colorAppBar</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="PasscodeActivityTheme" parent="NoActionBarTheme">
        <item name="android:statusBarColor">@color/colorBackground</item>
    </style>

</resources>