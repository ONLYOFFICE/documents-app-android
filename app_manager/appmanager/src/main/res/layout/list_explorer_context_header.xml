<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/item_one_line_height"
        android:layout_height="@dimen/item_one_line_height"
        android:layout_marginStart="@dimen/default_margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                style="@style/Widget.Common.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Report.docx" />

            <app.editors.manager.ui.views.badge.BadgeCardView
                android:id="@+id/badgeFormStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_small"
                android:visibility="gone"
                tools:badgeText="Your turn"
                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/badgeVersionCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_margin_small"
                android:visibility="gone"
                tools:visibility="visible"
                app:cardBackgroundColor="@color/colorOnBottomBarInActive"
                app:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/badgeVersion"
                    style="@style/Widget.Common.TextView.Micro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingHorizontal="@dimen/default_margin_small"
                    android:paddingVertical="@dimen/default_margin_micro"
                    tools:text="V.5"
                    android:textColor="@color/colorOnPrimary"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/subtitle"
            style="@style/Widget.Common.TextView.Small.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small"
            tools:text="23 Jan 2023 12:45 " />

        <TextView
            android:id="@+id/info"
            android:visibility="gone"
            style="@style/Widget.Common.TextView.Small.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin_small"
            tools:text="The file will be deleted 22.02 12:08 PM" />

    </LinearLayout>

    <include
        layout="@layout/view_line_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>