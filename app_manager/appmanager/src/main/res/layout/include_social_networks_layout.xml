<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/social_network_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/login_social_facebook_button"
        android:layout_width="@dimen/image_social_size"
        android:layout_height="@dimen/image_social_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_social_facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_social_google_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/login_social_google_button"
        android:layout_width="@dimen/image_social_size"
        android:layout_height="@dimen/image_social_size"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_social_google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_social_twitter_button"
        app:layout_constraintStart_toEndOf="@+id/login_social_facebook_button"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/login_social_twitter_button"
        android:layout_width="@dimen/image_social_size"
        android:layout_height="@dimen/image_social_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_social_twitter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/login_social_linkedin_button"
        app:layout_constraintStart_toEndOf="@+id/login_social_google_button"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/login_social_linkedin_button"
        android:layout_width="@dimen/image_social_size"
        android:layout_height="@dimen/image_social_size"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_social_linkedin"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/login_social_twitter_button"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>